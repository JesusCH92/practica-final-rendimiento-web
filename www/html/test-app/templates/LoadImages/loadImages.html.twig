{% extends 'base.html.twig' %}

{% block stylesheets %} 
    {{ parent() }} 
    <link rel="stylesheet" href="/assets/css/dropzone.css" type="text/css">
{% endblock %}

{% block body %}
    <form action="/save_photos" class="dropzone" method="POST" id="dropzoneFrom">
        <div class="fallback">
            <input name="photos" type="file" multiple id="archivos">
        </div>
    </form>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-dark" id="clear-photos-btn">Send photos</button>
    </div>
    
{% endblock %}

{% block head_js %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="/assets/js/dropzone.js"></script>  
    <script type="text/javascript" src="/assets/js/ModuleLoadImage.js"></script>

{% endblock %}